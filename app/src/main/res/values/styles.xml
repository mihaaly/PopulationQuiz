<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Home screen theme. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorDarkP</item>
    </style>


    <!-- App name style. -->
    <style name="style_title">
        <item name="android:textColor">@color/colorDarkP</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen_title_text_size</item>
    </style>

    <!-- Description text style. -->
    <style name="style_description">
        <item name="android:textColor">@color/colorLightP</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen_description_text_size</item>
    </style>
    
    <!-- Button style. -->
    <style name="style_button">
        <item name="android:background">@color/colorLightP</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dimen_button_text_size</item>
    </style>

    <!-- Quiz cards style.-->
    <style name="style_quiz_card">
        <item name="android:layout_margin">@dimen/dimen_default_margin</item>
        <item name="contentPadding">@dimen/dimen_card_content_padding</item>
        <item name="cardCornerRadius">@dimen/dimen_card_corner_radius</item>
    </style>
    
    <!-- Quiz cards question text style. -->
    <style name="style_question_text">
        <item name="android:textColor">@color/colorDarkP</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen_question_text_size</item>
    </style>

    <!-- Quiz cards answers text style. -->
    <style name="style_answer_text">
        <item name="android:textColor">@color/colorLightP</item>
        <item name="android:textSize">@dimen/dimen_answer_text_size</item>
    </style>

    <!-- Info article body style. -->
    <style name="style_article_body">
        <item name="android:textColor">@color/colorLightP</item>
        <item name="android:textSize">@dimen/dimen_article_body_text_size</item>
    </style>
    <!-- Quiz cards radio button style. -->
    <style name="style_answer_text.radio_button">
        <item name="android:paddingLeft">@dimen/dimen_option_left_padding</item>
        <item name="android:layout_marginBottom">@dimen/dimen_default_spacer</item>
        <item name="android:layout_marginLeft">@dimen/dimen_option_left_margin</item>
    </style>

    <!-- Divider style for Bottom bar. -->
    <style name="style_divider">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_margin">@dimen/dimen_default_spacer</item>
    </style>
</resources>
